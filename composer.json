{
    "name": "alchemicstudio/ponto-connect-php",
    "description": "Implementation of the Ponto Connect API in PHP.",
    "keywords": [
        "AlchemicStudio",
        "ponto-connect-php"
    ],
    "homepage": "https://github.com/alchemicstudio/ponto-connect-php",
    "license": "MIT",
    "authors": [
        {
            "name": "SÃ©bastien Denooz",
            "email": "sebastien.denooz@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^4.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "AlchemicStudio\\PontoConnect\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlchemicStudio\\PontoConnect\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
